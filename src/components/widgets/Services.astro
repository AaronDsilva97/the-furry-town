const services = [
  {
    title: 'Premium Pet Boarding',
    description: 'Top-notch care and comfort for your furry friend while youâ€™re away.',
    imageUrl: '~/assets/images/2.png',
  },
  {
    title: 'Dog and Cat Daycare',
    description: 'Fun-filled days with plenty of playtime and socialization.',
    imageUrl: '~/assets/images/3.png',
  },
  {
    title: 'Pet Photoshoots',
    description: 'Capture beautiful moments with professional pet photography.',
    imageUrl: '~/assets/images/4.png',
  },
