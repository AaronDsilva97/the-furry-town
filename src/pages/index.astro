---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Services from '~/components/widgets/Services.astro';

const metadata = {
  title: 'The Furry Town 🐾',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero image={{ src: '~/assets/images/furrytown.png', alt: 'AstroWind Hero Image' }}>
    <Fragment slot="title"> Welcome to The Furry Town 🐾</Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">Your Pet's Second Home in Pune</span>
        <br />Premium Pet Boarding | Dog & Cat Day Care Pet Photoshoots | Grooming Services</span
      >
    </Fragment>
  </Hero>

  <!-- Services Widget ******************* -->
  <div class="container mx-auto px-4">
    <!-- Introduction Section -->
    <div class="text-center py-8">
      <h2 class="text-3xl font-bold mb-4">What We Do</h2>
      <p class="text-lg text-gray-700 max-w-2xl mx-auto">
        At The Furry Town, we provide a range of premium services to ensure your pets are well taken care of. From
        comfortable boarding and fun-filled daycare to professional grooming and photography, we’ve got your pet
        covered.
      </p>
    </div>
    <Services />
  </div>
</Layout>
